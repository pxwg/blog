---
// src/pages/404.astro
import BaseHead from "$components/BaseHead.astro";
import Footer from "$components/Footer.astro";
import Header from "$components/Header.astro";
import { kSiteTitle, kSiteDescription } from "$consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={"404 Not Found - " + kSiteTitle} description={kSiteDescription} />
    <style>
      .centered-404 {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 60vh;
        text-align: center;
      }
      .centered-404 a {
        margin: 0 0.5em;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section class="centered-404">
        <h1>404 - Page Not Found</h1>
        <p>In a place where no one is, inspiration is born.</p>
        <div>
          You can: <a href="/about" class="accent">Contact me</a> and share your thoughts.
        </div>
        <div>
          Or: <a href="/" class="accent">Return Home</a> and explore other content.
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
