---
import { kUrlBase, kSiteLogo } from "$consts";

import { ThemeToggle } from "@myriaddreamin/tylant-theme-toggle";

import HeaderLink from "./HeaderLink.astro";

interface Props {
  articleId?: string;
}

const { articleId } = Astro.props;
---

<header>
  <nav>
    <h2 class="logo"><a href={`${kUrlBase}/`}>{kSiteLogo}</a></h2>
    <div class="internal-links">
      <HeaderLink href={`${kUrlBase}/`}>Home</HeaderLink>
      <HeaderLink href={`${kUrlBase}/article`}>Posts</HeaderLink>
      <HeaderLink href={`${kUrlBase}/friend`}>Friends</HeaderLink>
      <HeaderLink href={`${kUrlBase}/about`}>About</HeaderLink>
    </div>
    <div class="social-links">
      <span style="width: 2em;" aria-hidden="true">&nbsp;</span>
      <ThemeToggle />
      <a
        href="https://github.com/Myriad-Dreamin/blog"
        class="icon ls-icon"
        target="_blank"
        title="Go to the repository of this blog"
      >
        <span class="sr-only">Go to the repository of this blog</span>
        <svg viewBox="0 0 16 16" aria-hidden="true"
          ><path
            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
          ></path></svg
        >
      </a>
    </div>
  </nav>
</header>
<style>
  .logo {
    font-weight: 700;
    font-style: italic;
  }
  header {
    margin: 0;
    padding: 0 1em;
    background: var(--nav-bg-color);
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: min(56rem, calc(100% - 2em));
    margin: auto;
  }
  nav a {
    padding: 1em 0.5em;
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 680px) {
    .logo,
    .social-links a.ls-icon {
      display: none;
    }
  }
  @media (max-width: 400px) {
    nav {
      font-size: 14px;
    }
  }
  @media (max-width: 370px) {
    .internal-links {
      display: flex;
      flex-wrap: wrap;
    }
    .internal-links a {
      flex: 1 0 70px;
    }
  }
</style>
