{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "src/global.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "types": ["src/global.d.ts"],
    "typeRoots": ["./node_modules/@types", "."],
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "$consts": ["src/consts"],
      "$content/*": ["src/content/*"],
      "$components/*": ["src/components/*"],
      "$layouts/*": ["src/layouts/*"],
      "$styles/*": ["src/styles/*"]
    }
  }
}
